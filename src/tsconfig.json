{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",

        "outDir": "../dist",
        "declaration": true,
        "lib": [
            "es2015.promise",
            "es5",
            "dom"
        ],

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}